{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":semanticCommits"
  ],
  "prHourlyLimit": 2,
  "packageRules": [
    {
      "matchPackagePatterns": [
        "*"
      ],
      "groupName": "all dependencies",
      "groupSlug": "all-deps"
    },
    {
      "matchPackagePrefixes": [
        "GodotSharp",
        "Godot.NET.Sdk",
        "Chickensoft"
      ],
      "allowedVersions": "/^(\\d+\\.\\d+\\.\\d+)(-(beta)\\.(\\d+)(\\.\\d+)*)?$/"
    },
    {
      "matchPackageNames": [
        "dotnet-sdk"
      ],
      "matchCurrentVersion": "6.0.300"
    }
  ]
}
